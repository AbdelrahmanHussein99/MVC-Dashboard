@model EmployeeViewModel

@inject IDepartmentRepository _departmentRepository
@{
    // var departments = new SelectList(ViewData["Departments"] as IEnumerable<Department>,"Id","Name");
    var departments = new SelectList(await _departmentRepository.GetAll(), "Id", "Name");
}
<div class="form-group">
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Age" class="col-form-label"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Address" class="col-form-label"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Email" class="col-form-label"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Salary" class="col-form-label"></label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Phone" class="col-form-label"></label>
    <input asp-for="Phone" class="form-control" />
    <span asp-validation-for="Phone" class="text-danger"></span>
</div>
<div class="form-group">
    <input asp-for="IsActive" class="" />
    <label asp-for="IsActive" class="col-form-label"></label>
    <span asp-validation-for="IsActive" class="text-danger"></span>
</div>
<div class="form-group">
    <input asp-for="IsDeleted" class="" />
    <label asp-for="IsDeleted" class="col-form-label"></label>
    <span asp-validation-for="IsDeleted" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="HireDate" class="col-form-label"></label>
    <input asp-for="HireDate" class="form-control" />
    <span asp-validation-for="HireDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DateOfCreation" class="col-form-label"></label>
    <input asp-for="DateOfCreation" class="form-control" />
    <span asp-validation-for="DateOfCreation" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Department" class="col-form-label"></label>
    <select asp-for="DepartmentId" asp-items="@departments" class="form-control">
        <option value="@null">--Select Department--</option>
    </select>
</div>

<div class="form-group">
    <label asp-for="Image" class="col-form-label"></label>
    <input type="file" asp-for="Image" class="form-control" />

</div>