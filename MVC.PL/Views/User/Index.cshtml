@model IEnumerable<UserViewModel>;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3">All Users</h1>
<form asp-action="Index" class=" my-3">
    <div class="row">
        <div class="col-8">
            <input type="text" placeholder="Search" name="SearchInput" id="SearchInputUser" class="form-control" />
        </div>
        <input type="submit" value="Search" class="btn btn-success" />
    </div>
</form>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.FirstName)</th>
                <th>@Html.DisplayNameFor(D => D.LastName)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.Id</td>
                    <td>@User.FirstName</td>
                    <td>@User.LastName</td>
                    <td>@User.Email</td>
                    <td>@string.Join(" ",User.Roles)</td>

                    <partial name="_ButtonsPartialView" model="@User.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is no User</h4>
    </div>
}

